<div class="container" style="padding-top:3%">
    <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="panel panel-default">
                <div class="portfolio-box">
                    <div class="row">
                        <div class="panel-heading">
                            <div class="col-md-3 text-center vcenter">
                                <img class="media-object img-circle" width="80px" src="@item.profilePicURL" alt="...">
                            </div><!--
                        --><div class="col-md-9 vcenter">
                                <h3 class="media-heading name-bold">@item.FullName</h3>
                                <div class="row">
                                    <div class="col-md-12 vertical-padding location-small-font">
                                        <i class="fa fa-map-marker fa-lg text-primary"></i> @item.Address
                                    </div>
                                    <div class="col-md-5 vertical-padding">
                                        <i class="fa fa-1x fa-star bounceIn text-primary"></i>
                                        <i class="fa fa-1x fa-star bounceIn text-primary"></i>
                                        <i class="fa fa-1x fa-star bounceIn text-primary"></i>
                                        <i class="fa fa-1x fa-star bounceIn text-primary"></i>
                                        <i class="fa fa-1x fa-star-half-empty bounceIn text-primary"></i>
                                    </div>
                                    <div class="col-md-7 vertical-padding">
                                        <i class="fa fa-lg fa-money text-primary"></i>
                                        Rs. @item.stats.avgRatePerHr /hour
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="portfolio-box-caption">
                        <div class="portfolio-box-caption-content">
                            @Html.ActionLink("View Profile", "myProfile", "Profile", new { userID = @item.ID }, new { @id= item.ID , @class="project-name whitetext" } )
                            @*<a href="#" class="project-name whitetext">
                                View Profile
                            </a>*@
                            @*<a href="#" class="project-name whitetext" data-toggle="modal" data-target="#exampleModal" data-whatever="@@mdo">
                                Hire me!
                            </a>*@

                            @*Message me pop-up*@
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="exampleModalLabel">New message</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form>
                                                <div class="form-group">
                                                    <label for="recipient-name" class="control-label">Recipient:</label>
                                                    <input type="text" class="form-control" id="recipient-name" placeholder="Faizi...get name of user from DB and enter here automatically!">
                                                </div>
                                                <div class="form-group">
                                                    <label for="message-text" class="control-label">Message:</label>
                                                    <textarea class="form-control" id="message-text"></textarea>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Send message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                
                <div class="panel-footer text-center">
                    @*<div class="media-heading">Services</div>*@
                    @foreach (var servic in item.myServices)
                    {
                        <span data-toggle="tooltip" data-placement="bottom" title="Home Delivery | Click for details">
                        <a tabindex="0" class="fa-stack fa-lg text-primary" role="button" data-toggle="popover" data-placement="top" data-trigger="focus" title="@servic.providedService.Name" data-content="@servic.providedService.Description">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa @servic.providedService.icon fa-stack-1x fa-inverse"></i>
                        </a>
                        </span>
                    }
                </div>
                                    
            </div>
        </div>
    }

        
    </div>
    <div class="row text-center">
        <div class="col-md-12">
            <nav>
                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
